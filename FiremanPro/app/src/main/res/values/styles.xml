<resources>

    <style name="FiremanProTheme" parent="FiremanProTheme.Base"></style>

    <style name="FiremanProTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/glavna</item>
        <item name="editTextColor">@color/colorInput</item>
        <item name="android:textColor">  @color/text </item>
        <item name="colorButtonNormal">@color/colorButton</item>
    </style>

    <style name="FiremanProTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FiremanProTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="FiremanProTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="gumbFensi" >
        <item name="colorControlHighlight"> @color/gumbPromijena </item>
        <item name="android:textColor"> @color/colorButton </item>
        <item name="android:gravity"> center_vertical </item>
        <item name="android:layout_marginBottom"> 24dp </item>
        <item name="android:fontFamily"> Roboto </item>
        <item name="android:paddingLeft"> 16dp</item>
        <item name="android:paddingRight"> 16dp</item>
    </style>


    <style name="text">
        <item name="android:paddingTop"> 16dp </item>
        <item name="android:textSize"> 16sp </item>
        <item name="android:fontFamily"> Roboto </item>
        <item name="android:textColor">  @color/text </item>
        <item name="android:textAlignment"> textStart </item>
        <item name="android:layout_width"> wrap_content </item>
        <item name="android:layout_marginRight"> 8dp </item>
        <item name="android:layout_marginLeft"> 16dp </item>
    </style>

    <style name="textPodaci" parent="text">
        <item name="android:layout_marginRight"> 0dp </item>
        <item name="android:layout_marginLeft"> 0dp </item>
        <item name="android:textStyle"> bold|italic  </item>
    </style>



    <style name="glavniMain">
        <item name="android:textColor"> @color/text </item>
        <item name="android:background"> @color/glavna </item>
        <item name="android:text"> @string/app_name </item>
    </style>

</resources>
